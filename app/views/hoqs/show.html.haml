    = link_to("Insert Above", "#insert_above")
  %li.insert_below
    = link_to("Insert Below", "#insert_below")
  %li.paste_above
    = link_to("Paste Above", "#paste_above")
  %li.paste_below
    = link_to("Paste Below", "#paste_below")
  %li.unhide
    = link_to("Unhide", "#unhide")
